<% db = properties.send(properties.db) %>
local   all             all                                     trust
host    all             all             127.0.0.1/32            trust
host    all             all             ::1/128                 trust
host    all             all             0.0.0.0/0               md5
<% db.roles.each do |role| %>
  host    all  <%= role.name %> 0.0.0.0/0 md5
  <% if !role.extra_credentials.nil? && role.extra_credentials.count>0 %>
    <% role.extra_credentials.each do |cred| %>
      host    all  <%= cred.name %> 0.0.0.0/0 md5
    <% end %>
  <% end %>
<% end %>
